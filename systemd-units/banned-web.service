[Unit]
Description=Flask webserver for the ban counter
After=network.target

[Service]
Type=simple
User=sff
WorkingDirectory=/home/sff/Projects/scribe
ExecStart=/home/sff/Projects/scribe/venv/bin/gunicorn -w 4 -b 127.0.0.1:5000 --chdir /home/sff/Projects/scribe/web banned_web:app
Restart=on-failure

[Install]
WantedBy=multi-user.target
